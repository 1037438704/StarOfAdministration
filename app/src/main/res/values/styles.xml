<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--启动页的背景-->
        <item name="android:windowBackground">@mipmap/icon_start</item>
        <!--沉浸-->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--<item name="android:fitsSystemWindows">true</item>-->
    </style>


    <style name="MyEditText" parent="Theme.AppCompat.Light">
    <item name="colorControlNormal">@color/editcolor</item>
    <item name="colorControlActivated">@color/editcolor</item>
    </style>


    <style name="AnimationFade">
        <!--   PopupWindow左右弹出的效果-->
        <item name="android:windowEnterAnimation">@anim/in_lefttoright</item>
        <item name="android:windowExitAnimation">@anim/out_righttoleft</item>
    </style>

   <!-- <style name="TabLayoutTextStyle"> <item name="android:textSize">@dimen/textsizi</item> </style>-->

</resources>
