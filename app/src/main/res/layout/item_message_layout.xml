<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <androidx.cardview.widget.CardView
        android:layout_marginTop="12dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        app:cardElevation="2dp"
        android:layout_marginBottom="3dp"
        app:cardCornerRadius="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:paddingBottom="8dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:background="@drawable/shape_radius100"
                android:layout_width="match_parent"
                android:layout_height="4dp"/>

            <TextView
                android:id="@+id/message_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_marginTop="8dp"
                android:includeFontPadding="false"
                android:text="关于疫情防控工作的重要指导意见"
                android:textColor="#ff3e3e41"
                android:textSize="16sp" />



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="公文标题：公文的标题标题"
                android:textColor="#ff717173"
                android:textSize="15sp"
                android:gravity="center_vertical"
                android:orientation="horizontal"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="公文类型：通告"
                android:textColor="#ff717173"
                android:textSize="15sp"
                android:gravity="center_vertical"
                android:orientation="horizontal"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="驳回日期：2020/03/12 12:40:20"
                android:textColor="#ff717173"
                android:textSize="15sp"
                android:gravity="center_vertical"
                android:orientation="horizontal"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="驳回人：陈水淼"
                android:textColor="#ff717173"
                android:textSize="15sp"
                android:gravity="center_vertical"
                android:orientation="horizontal"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="附件："
                    android:textColor="#ff717173"
                    android:textSize="15sp" />

                <!-- <LinearLayout
                     android:layout_width="wrap_content"
                     android:layout_height="match_parent"
                     android:background="@drawable/shape_hui14"
                     android:gravity="center_vertical">

                     <ImageView
                         android:layout_width="11dp"
                         android:layout_height="11dp"
                         android:layout_marginLeft="15dp"
                         android:src="@mipmap/daiban_lianjie" />

                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="match_parent"
                         android:layout_marginLeft="4dp"
                         android:layout_marginRight="14dp"
                         android:gravity="center_vertical"
                         android:text="指导意见01"
                         android:textColor="#ff717173"
                         android:textSize="13sp" />
                 </LinearLayout>-->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/shape_hui14"
                    android:gravity="center"
                    android:paddingLeft="13dp"
                    android:paddingTop="4dp"
                    android:paddingRight="12dp"
                    android:paddingBottom="4dp"
                    android:text="+2"
                    android:textColor="#ff717173"
                    android:textSize="13sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@color/backgroundHui" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="编号：1274718733791379237489379237489"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="#ff9f9fa0"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="6dp"
                    android:layout_marginLeft="18dp"
                    android:text="2020/03/26 13:45:29"
                    android:textColor="#ff9f9fa0"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>