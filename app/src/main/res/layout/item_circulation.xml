<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/item_circula_linear"
    android:layout_marginTop="12dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/item_fiction_title"
        android:layout_width="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:text="关于疫情防控工作的重要指导意见"
        android:textColor="#ff3e3e41"
        android:textSize="16sp"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="要求办结：2020/03/12 13:42:23"
            android:textColor="#ff717173"
            android:textSize="14sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="状态：等待处理"
            android:textColor="#ff717173"
            android:textSize="14sp"
            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="12dp"
        android:layout_height="wrap_content"
        android:text="收文时间：2020/03/26 13:45:29"
        android:textColor="#ff717173"
        android:textSize="14sp"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="来文单位："
            android:textColor="#ff717173"
            android:textSize="14sp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="某某某某某某"
            android:textColor="#ff717173"
            android:textSize="14sp"
            />
    </LinearLayout>

    <View
        android:layout_marginTop="16dp"
        android:background="@color/color_EFF0F2"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

