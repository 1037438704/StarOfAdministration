<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:orientation="vertical"
    tools:context=".aty.FeedBackActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1">

        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:elevation="2dp"
            android:layout_height="80dp">

            <LinearLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="41dp"
                android:layout_marginLeft="12dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/set_feed_back"
                    android:src="@mipmap/icon_back"
                    android:layout_width="22dp"
                    android:layout_height="22dp"/>

                <TextView
                    android:id="@+id/set_feed_title"
                    android:text="问题反馈"
                    android:textSize="16sp"
                    android:textColor="#3E3E41"
                    android:includeFontPadding="false"
                    android:layout_marginLeft="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:text="请输入问题信息"
            android:textSize="14dp"
            android:textColor="#AAAAAB"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:hint="要反馈的内容"
            android:textColorHint="@color/color_717173"
            android:background="#fff"
            android:textSize="16dp"
            android:paddingLeft="20dp"
            android:paddingRight="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:gravity="top"
            android:layout_width="match_parent"
            android:layout_height="166dp"/>

    </LinearLayout>


    <TextView
        android:id="@+id/set_feed_feed"
        android:gravity="center"
        android:textColor="#DB1F2C"
        android:textSize="14dp"
        android:background="#fff"
        android:text="立即反馈"
        android:includeFontPadding="false"
        android:layout_width="match_parent"
        android:layout_height="45dp"/>
</LinearLayout>