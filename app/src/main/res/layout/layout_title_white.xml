<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:orientation="horizontal"
    android:layout_height="70dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_marginTop="25dp"
        android:gravity="center_vertical"
        android:layout_height="45dp">

        <ImageView
            android:id="@+id/title_back"
            android:src="@mipmap/icon_back"
            android:layout_width="22dp"
            android:layout_marginLeft="12dp"
            android:layout_height="22dp"/>

        <TextView
            android:id="@+id/title_text"
            android:text="标题"
            android:textSize="16dp"
            android:textColor="@color/textMedium"
            android:layout_marginLeft="8dp"
            android:includeFontPadding="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/title_more"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginRight="12dp"
        android:layout_marginTop="25dp"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_height="match_parent">

        <ImageView
            android:src="@mipmap/icon_more_dian"
            android:layout_width="25dp"
            android:layout_height="25dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/title_new"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginRight="12dp"
        android:layout_marginTop="25dp"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <ImageView
            android:src="@mipmap/icon_new"
            android:layout_width="12dp"
            android:layout_height="12dp"/>

        <TextView
            android:text="新建"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:layout_marginLeft="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <TextView
        android:id="@+id/title_right"
        android:text="常用组"
        android:textColor="@color/textMedium"
        android:textSize="15dp"
        android:gravity="center"
        android:visibility="gone"
        android:includeFontPadding="false"
        android:layout_marginTop="25dp"
        android:layout_marginRight="20dp"
        android:layout_width="wrap_content"
        android:layout_height="45dp"/>

    <LinearLayout
        android:id="@+id/title_button1"
        android:gravity="center"
        android:visibility="gone"
        android:orientation="horizontal"
        android:layout_marginRight="12dp"
        android:layout_marginTop="25dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/title_button2"
            android:text="保存"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:background="@drawable/shape_red42_22"
            android:includeFontPadding="false"
            android:layout_width="48dp"
            android:layout_height="28dp"/>

    </LinearLayout>

</LinearLayout>
