<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:elevation="5dp"
    android:layout_marginTop="12dp"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:paddingRight="12dp"
    android:paddingLeft="12dp"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/item_fiction_title"
        android:layout_width="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:text="关于疫情防控工作的重要指导意见"
        android:textColor="#ff3e3e41"
        android:textSize="16sp"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="起草人：某某某"
            android:textColor="#ff717173"
            android:textSize="14sp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="状态：等待处理"
            android:layout_marginLeft="70dp"
            android:textColor="#ff717173"
            android:textSize="14sp"
            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="12dp"
        android:layout_height="wrap_content"
        android:text="起草日期：2020/03/26 13:45:29"
        android:textColor="#ff717173"
        android:textSize="14sp"
        />

    <View
        android:layout_marginTop="16dp"
        android:background="@color/backgroundHui"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

