<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="#fff"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/join_context_title"
            android:text="关于贯彻落实疫情以前中小企业人员流动管控的指导意见"
            android:textSize="16dp"
            android:textColor="@color/textMedium"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:includeFontPadding="false"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <View
            android:background="@color/backgroundHui"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <TextView
            android:id="@+id/join_context_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:text="拟编号：1274718733791379237489"
            android:textColor="#ff9f9fa0"
            android:textSize="12sp"
            />

        <View
            android:background="@color/backgroundHui"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="8dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:gravity="left"
                android:layout_height="wrap_content">

                <TextView
                    android:text="公文类型"
                    android:textColor="@color/text9f9fa0"
                    android:textSize="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/join_context_tongzhi"
                    android:text="通知"
                    android:textColor="@color/textMedium"
                    android:textSize="14dp"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginLeft="30dp"
                android:orientation="vertical"
                android:gravity="left"
                android:layout_height="wrap_content">

                <TextView
                    android:text="公开属性"
                    android:textColor="@color/text9f9fa0"
                    android:textSize="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/join_context_gongkai"
                    android:text="依申请公开"
                    android:textColor="@color/textMedium"
                    android:textSize="14dp"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginLeft="30dp"
                android:orientation="vertical"
                android:gravity="left"
                android:layout_height="wrap_content">

                <TextView
                    android:text="起草人"
                    android:textColor="@color/text9f9fa0"
                    android:textSize="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/join_context_qicaoren"
                    android:text="某某某某"
                    android:textColor="@color/textMedium"
                    android:textSize="14dp"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginLeft="30dp"
                android:orientation="vertical"
                android:gravity="left"
                android:layout_height="wrap_content">

                <TextView
                    android:text="是否会签"
                    android:textColor="@color/text9f9fa0"
                    android:textSize="14dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/join_context_huiqian"
                    android:text="是"
                    android:textColor="@color/textMedium"
                    android:textSize="14dp"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

        <View
            android:background="@color/backgroundHui"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="8dp"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/join_context_subject"
                android:textSize="16dp"
                android:textColor="@color/textMedium"
                android:textColorHint="#D7D7D8"
                android:padding="16dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </ScrollView>

    </LinearLayout>

    <include layout="@layout/layout_cebianlan" />

</RelativeLayout>
