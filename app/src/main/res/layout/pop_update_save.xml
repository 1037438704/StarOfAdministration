<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/background"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#60000000"
        android:gravity="center"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:background="@drawable/shape_background4_8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginTop="20dp"
                android:text="是否立即保存"
                android:textSize="16dp"
                android:textColor="@color/textMedium"
                android:fontFamily="sans-serif-medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="191dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="您已进行修改，是否立即保存"
                android:textColor="#ff717173"
                android:textSize="14sp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:layout_marginRight="52dp"
                android:layout_marginLeft="52dp"
                android:layout_marginTop="28dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                >
                <Button
                    android:text="暂不保存"
                    android:textSize="14dp"
                    android:background="@drawable/shape_white22"
                    android:textColor="#9f9fa0"
                    android:layout_width="100dp"
                    android:layout_height="36dp"/>

                <Button
                    android:text="立即更新"
                    android:textSize="14dp"
                    android:layout_marginLeft="12dp"
                    android:background="@drawable/shape_red22"
                    android:textColor="#fff"
                    android:layout_width="100dp"
                    android:layout_height="36dp"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
