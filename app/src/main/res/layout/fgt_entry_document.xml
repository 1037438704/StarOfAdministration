<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="#fff"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/join_context_title"
            android:text="关于贯彻落实疫情以前中小企业人员流动管控的指导意见"
            android:textSize="16dp"
            android:textColor="@color/textMedium"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:includeFontPadding="false"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <View
            android:background="@color/backgroundHui"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <TextView
            android:id="@+id/join_context_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:text="拟编号：1274718733791379237489"
            android:textColor="#ff9f9fa0"
            android:textSize="12sp"
            />

        <View
            android:background="@color/backgroundHui"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="8dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="紧急度"
                android:textSize="16dp"
                android:textColor="@color/text9f9fa0"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="通知"
                android:textSize="15dp"
                android:textColor="@color/textMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <View
            android:background="@color/backgroundHui"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="8dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="来文单位"
                android:textSize="16dp"
                android:textColor="@color/text9f9fa0"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginRight="16dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="上海市宝山区张恒达到"
                android:textSize="15dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/textMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <View
            android:background="@color/backgroundHui"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="8dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="要求办结"
                android:textSize="16dp"
                android:textColor="@color/text9f9fa0"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/setmes_type_text"
                android:text="2020/3/4 12:34:21"
                android:textSize="15dp"
                android:textColor="@color/textMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <View
            android:background="@color/backgroundHui"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="8dp"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/join_context_subject"
                android:textSize="16dp"
                android:textColor="@color/textMedium"
                android:textColorHint="#D7D7D8"
                android:padding="16dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </ScrollView>

    </LinearLayout>

    <include layout="@layout/layout_cebianlan" />

</RelativeLayout>
