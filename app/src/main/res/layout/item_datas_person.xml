<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:text="1"
                android:textSize="16dp"
                android:gravity="center"
                android:layout_marginLeft="12dp"
                android:textColor="@color/textMedium"
                android:layout_width="24dp"
                android:layout_height="20dp"/>

            <TextView
                android:text="谢桂英"
                android:textSize="16dp"
                android:textColor="@color/textMedium"
                android:layout_marginLeft="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:src="@mipmap/icon_up"
                android:layout_marginLeft="4dp"
                android:layout_width="16dp"
                android:layout_height="16dp"/>

            <TextView
                android:text="2"
                android:textColor="@color/textDataUp"
                android:textSize="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <TextView
            android:text="100"
            android:textSize="16dp"
            android:layout_marginRight="12dp"
            android:textColor="@color/textMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>



    <TextView
        android:text="所在单位：嘟嘟嘟嘟嘟嘟"
        android:textColor="@color/text717173"
        android:textSize="14dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="14dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="所在部门：嘟嘟嘟嘟嘟嘟"
        android:textColor="@color/text717173"
        android:textSize="12dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="14dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <View
        android:background="#EFF0F2"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="4dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</LinearLayout>
