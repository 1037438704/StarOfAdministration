<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:orientation="vertical"
    tools:context=".aty.ServiceActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1">

        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:elevation="2dp"
            android:layout_height="80dp">

            <LinearLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="41dp"
                android:layout_marginLeft="12dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/set_service_back"
                    android:src="@mipmap/icon_back"
                    android:layout_width="22dp"
                    android:layout_height="22dp"/>

                <TextView
                    android:id="@+id/set_service_title"
                    android:text="服务中心"
                    android:textSize="18sp"
                    android:textColor="#3E3E41"
                    android:includeFontPadding="false"
                    android:layout_marginLeft="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:text="服务简介"
            android:textSize="14dp"
            android:textColor="#AAAAAB"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:hint="简介的内容"
            android:textColorHint="@color/text717173"
            android:background="#fff"
            android:textSize="16dp"
            android:paddingLeft="20dp"
            android:paddingRight="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:gravity="top"
            android:layout_width="match_parent"
            android:layout_height="166dp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/white"
        android:layout_height="45dp">

        <ImageView
            android:src="@mipmap/icon_phone"
            android:layout_marginRight="4dp"
            android:layout_width="16dp"
            android:layout_height="16dp"/>
        <TextView
            android:id="@+id/set_service_phone"
            android:textColor="#DB1F2C"
            android:textSize="14dp"
            android:background="#fff"
            android:text="拨打客服电话"
            android:includeFontPadding="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>