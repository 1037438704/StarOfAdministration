<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:orientation="vertical"
    tools:context=".aty.UpdatePassActivity">

    <LinearLayout
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <LinearLayout
            android:background="@color/white"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginTop="41dp"
            android:layout_marginLeft="12dp"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/set_pass_back"
                android:src="@mipmap/icon_back"
                android:layout_width="22dp"
                android:layout_height="22dp"/>

            <TextView
                android:id="@+id/set_pass_title"
                android:text="重置密码"
                android:textSize="18sp"
                android:textColor="#3E3E41"
                android:includeFontPadding="false"
                android:layout_marginLeft="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <TextView
            android:text="确认"
            android:layout_marginTop="41dp"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <View
        android:background="#EFF0F2"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:elevation="2dp"
        android:background="@color/white"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/set_safe_pass"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="56dp">

            <TextView
                android:textColor="@color/textMedium"
                android:textSize="16dp"
                android:text="原始密码"
                android:layout_marginLeft="20dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>

            <EditText
                android:textColor="@color/text717173"
                android:textSize="14dp"
                android:text="请输入现在的密码"
                android:background="@null"
                android:textColorHint="#9f9FA0"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <View
            android:background="#EFF0F2"
            android:layout_marginLeft="21dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="56dp">

            <TextView
                android:textColor="@color/textMedium"
                android:textSize="16dp"
                android:text="新密码"
                android:layout_marginLeft="20dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>

            <EditText
                android:textColor="@color/text717173"
                android:textSize="14dp"
                android:text="请输入新的密码"
                android:background="@null"
                android:textColorHint="#9f9FA0"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <View
            android:background="#EFF0F2"
           android:layout_marginRight="20dp"
            android:layout_marginLeft="21dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="56dp">

            <TextView
                android:textColor="@color/textMedium"
                android:textSize="16dp"
                android:text="确认新密码"
                android:layout_marginLeft="20dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>

            <EditText
                android:textColor="@color/text717173"
                android:textSize="14dp"
                android:text="请确认新的密码"
                android:background="@null"
                android:textColorHint="#9f9FA0"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>