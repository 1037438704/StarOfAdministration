<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/backgroundHui"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardElevation="3dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="38dp">

            <LinearLayout
                android:id="@+id/choose_leibie"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/text_category"
                    android:text="类别"
                    android:textColor="#717173"
                    android:textSize="14dp"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>

                <ImageView
                    android:id="@+id/daiban_down1"
                    android:layout_marginLeft="3dp"
                    android:src="@mipmap/daiban_down"
                    android:layout_width="8dp"
                    android:layout_height="4dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/text_timer"
                    android:text="接收时间"
                    android:textColor="#717173"
                    android:textSize="14dp"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>

                <ImageView
                    android:id="@+id/daiban_down2"
                    android:layout_marginLeft="3dp"
                    android:src="@mipmap/daiban_down"
                    android:layout_width="8dp"
                    android:layout_height="4dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/text_urgent"
                    android:text="紧急度"
                    android:textColor="#717173"
                    android:textSize="14dp"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>

                <ImageView
                    android:id="@+id/daiban_down3"
                    android:layout_marginLeft="3dp"
                    android:src="@mipmap/daiban_down"
                    android:layout_width="8dp"
                    android:layout_height="4dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/text_choose"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_height="match_parent">

                <View
                    android:layout_width="1dp"
                    android:background="#D7D7D8"
                    android:layout_marginTop="11dp"
                    android:layout_marginBottom="11dp"
                    android:layout_height="match_parent"/>
                <TextView

                    android:text="筛选"
                    android:textColor="#717173"
                    android:textSize="14dp"
                    android:layout_marginLeft="11dp"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>

                <ImageView
                    android:layout_marginLeft="3dp"
                    android:src="@mipmap/daiban_shaixuan"
                    android:layout_width="11dp"
                    android:layout_height="12dp"/>
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/linear_leibie"
        android:layout_marginTop="40dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#60000000"
        android:orientation="vertical"
        >

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_leibie"
            android:layout_width="match_parent"
            android:background="@drawable/shape_white_xia_12"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycle_message"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="52dp">

    </androidx.recyclerview.widget.RecyclerView>

</FrameLayout>
