<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_height="47dp">

    <ImageView
        android:src="@mipmap/icon_people"
        android:layout_marginLeft="8dp"
        android:layout_width="36dp"
        android:layout_height="36dp"/>


    <ImageView
        android:src="@mipmap/icon_hand_writing"
        android:layout_marginLeft="2dp"
        android:layout_width="36dp"
        android:layout_height="36dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/shape_hui4"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="36dp">

        <EditText
            android:hint="请填写备注信息"
            android:textSize="14dp"
            android:layout_marginLeft="8dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@null"/>

        <ImageView
            android:src="@mipmap/icon_commonly_used"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="12dp"
            android:layout_width="16dp"
            android:layout_height="16dp"/>

    </LinearLayout>

    <Button
        android:text="提交"
        android:textColor="#ffffff"
        android:textSize="14dp"
        android:background="@drawable/shape_red42_22"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="12dp"
        android:layout_width="52dp"
        android:layout_height="34dp"/>
</LinearLayout>
