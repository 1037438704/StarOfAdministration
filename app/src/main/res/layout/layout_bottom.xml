<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="47dp">

        <Button
            android:id="@+id/bottom_chat"
            android:background="@drawable/shape_red_line8"
            android:text="常用语"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="8dp"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="66dp"
            android:layout_height="34dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/shape_hui4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="36dp">

            <EditText
                android:id="@+id/bottom_whrit"
                android:hint="请填写备注信息"
                android:textSize="14dp"
                android:layout_marginLeft="8dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@null"/>

            <ImageView
                android:id="@+id/bottom_pizhu"
                android:src="@mipmap/icon_hand_writing"
                android:layout_marginLeft="2dp"
                android:layout_width="17dp"
                android:layout_marginRight="12dp"
                android:layout_height="17dp"/>

        </LinearLayout>

        <Button
            android:id="@+id/bottom_button"
            android:text="提交"
            android:textColor="#ffffff"
            android:textSize="14dp"
            android:background="@drawable/shape_red42_22"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="12dp"
            android:layout_width="52dp"
            android:layout_height="34dp"/>
    </LinearLayout>

    <View
        android:background="#eff0f2"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:id="@+id/draft_chat"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginTop="2dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="253dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/draft_chat_recycle"
            android:layout_width="match_parent"
            android:layout_height="206dp">
        </androidx.recyclerview.widget.RecyclerView>

        <View
            android:background="#eff0f2"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="46dp">

            <LinearLayout
                android:id="@+id/draft_chat_new"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/draft_chat_new_img"
                    android:src="@mipmap/icon_chang_yong_new"
                    android:layout_width="16dp"
                    android:layout_height="16dp"/>

                <TextView
                    android:id="@+id/draft_chat_new_text"
                    android:text="新建"
                    android:textColor="@color/textMedium"
                    android:textSize="16dp"
                    android:includeFontPadding="false"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <View
                android:background="#eff0f2"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="17dp"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:id="@+id/draft_chat_set"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/draft_chat_set_img"
                    android:src="@mipmap/icon_chang_yong_set"
                    android:layout_width="16dp"
                    android:layout_height="16dp"/>
                <TextView
                    android:id="@+id/draft_chat_set_text"
                    android:text="管理"
                    android:textColor="@color/textMedium"
                    android:textSize="16dp"
                    android:includeFontPadding="false"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_gongneng"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="46dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_height="match_parent">

            <ImageView
                android:src="@mipmap/icon_chang_yong_new"
                android:layout_width="16dp"
                android:layout_height="16dp"/>

            <TextView
                android:text="驳回"
                android:textColor="@color/textMedium"
                android:textSize="16dp"
                android:includeFontPadding="false"
                android:layout_width="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <View
            android:background="#eff0f2"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="17dp"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:id="@+id/bottom_person"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_height="match_parent">

            <ImageView
                android:src="@mipmap/icon_chang_yong_set"
                android:layout_width="16dp"
                android:layout_height="16dp"/>

            <TextView
                android:text="添加审核人"
                android:textColor="@color/textMedium"
                android:textSize="16dp"
                android:includeFontPadding="false"
                android:layout_width="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
