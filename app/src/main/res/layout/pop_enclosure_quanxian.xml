<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <!--更多小黑框-->
    <LinearLayout
        android:id="@+id/Enclosure_more"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12dp"
        android:gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginRight="10dp"
            android:src="@mipmap/icon_angle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:background="@drawable/shape_pop4"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/pop_fujian_quan"
                android:text="全体人员可见"
                android:textColor="#ffffff"
                android:textSize="16dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <View
                android:background="#4C4C50"
                android:layout_marginTop="16dp"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <TextView
                android:id="@+id/pop_fujian_chuang"
                android:text="仅创建者可见"
                android:textColor="#ffffff"
                android:textSize="16dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <View
                android:background="#4C4C50"
                android:layout_marginTop="16dp"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <TextView
                android:id="@+id/pop_fujian_delete"
                android:text="删除附件"
                android:textColor="#ffffff"
                android:textSize="16dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>
