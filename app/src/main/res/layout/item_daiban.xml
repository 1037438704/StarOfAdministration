<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#E7CECE"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:elevation="5dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:paddingRight="12dp"
        android:paddingLeft="12dp"
        android:background="@drawable/shape_white12"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@mipmap/daiban_book"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="关于疫情防控工作的重要指导意见"
                android:textColor="#ff3e3e41"
                android:textSize="16sp"
                />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="编号：1274718733791379237489"
            android:textColor="#ff9f9fa0"
            android:textSize="12sp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="14dp"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:text="类别："
                android:textColor="#ff717173"
                android:textSize="16sp"
                />

            <TextView
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:text="公文拟制"
                android:textColor="#ff717173"
                android:textSize="16sp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:text="分类："
                android:textColor="#ff717173"
                android:textSize="16sp"
                />

            <TextView
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:text="意见"
                android:textColor="#ff717173"
                android:textSize="16sp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical"
            android:layout_height="28dp">

            <TextView
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:text="附件："
                android:textColor="#ff717173"
                android:textSize="16sp"
                />

            <LinearLayout
                android:background="@drawable/shape_hui14"
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@mipmap/daiban_lianjie"
                    android:layout_marginLeft="15dp"
                    android:layout_width="11dp"
                    android:layout_height="11dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="指导意见01"
                    android:gravity="center_vertical"
                    android:textColor="#ff717173"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="14dp"
                    android:textSize="14sp"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="64dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="+2"
                android:layout_marginLeft="8dp"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:paddingLeft="13dp"
                android:paddingRight="12dp"
                android:background="@drawable/shape_hui14"
                android:textColor="#ff717173"
                android:textSize="16sp"
                />
        </LinearLayout>

        <View
            android:layout_marginTop="16dp"
            android:background="@color/color_EFF0F2"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <RelativeLayout
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp"
            android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="wrap_content"
                android:layout_height="20dp">

            </androidx.recyclerview.widget.RecyclerView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="2020/03/26 13:45:29"
                android:textColor="#ff9f9fa0"
                android:textSize="14sp"
                />

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
