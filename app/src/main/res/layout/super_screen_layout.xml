<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fiction_drawerlayout"
    android:layout_width="310dp"
    android:layout_height="match_parent"
    android:layout_gravity="right"
    android:background="@drawable/shape_white8"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginBottom="48dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="310dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="1dp"
            android:orientation="vertical"
            android:paddingLeft="12dp"
            android:paddingTop="34dp">

            <TextView
                android:id="@+id/fiction_choose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="条件筛选器"
                android:includeFontPadding="false"
                android:textColor="#ff3e3e41"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="按督查单位筛选"
                android:textColor="@color/color_9F9FA0"
                android:textSize="14sp" />

            <LinearLayout
                android:orientation="horizontal"
                android:background="@drawable/vciv_et_text_bg"
                android:layout_marginRight="12dp"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="30dp">

                <TextView
                    android:text="选择督查单位"
                    android:textSize="14dp"
                    android:textColor="#D7D7D8"
                    android:layout_marginLeft="8dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/speed_img_leibie"
                    android:layout_marginRight="8dp"
                    android:src="@mipmap/daiban_down"
                    android:layout_width="8dp"
                    android:layout_height="4dp"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="按主责单位筛选"
                android:textColor="@color/color_9F9FA0"
                android:textSize="14sp" />

            <LinearLayout
                android:orientation="horizontal"
                android:background="@drawable/vciv_et_text_bg"
                android:layout_marginRight="12dp"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="30dp">

                <TextView
                    android:text="选择主责单位"
                    android:textSize="14dp"
                    android:textColor="#D7D7D8"
                    android:layout_marginLeft="8dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:layout_marginRight="8dp"
                    android:src="@mipmap/daiban_down"
                    android:layout_width="8dp"
                    android:layout_height="4dp"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="按分管领导筛选"
                android:textColor="@color/color_9F9FA0"
                android:textSize="14sp" />

            <LinearLayout
                android:orientation="horizontal"
                android:background="@drawable/vciv_et_text_bg"
                android:layout_marginRight="12dp"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="30dp">

                <TextView
                    android:text="选择分管领导"
                    android:textSize="14dp"
                    android:textColor="#D7D7D8"
                    android:layout_marginLeft="8dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:layout_marginRight="8dp"
                    android:src="@mipmap/daiban_down"
                    android:layout_width="8dp"
                    android:layout_height="4dp"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="按公文字号筛选"
                android:textColor="@color/color_9F9FA0"
                android:textSize="14sp" />

            <LinearLayout
                android:orientation="horizontal"
                android:background="@drawable/vciv_et_text_bg"
                android:layout_marginRight="12dp"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="30dp">

                <TextView
                    android:text="选择督查单位"
                    android:textSize="14dp"
                    android:textColor="#D7D7D8"
                    android:layout_marginLeft="8dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="按办结状态筛选"
                android:textColor="@color/color_9F9FA0"
                android:textSize="14dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                android:layout_height="wrap_content">

                <CheckBox
                    android:text="预警中"
                    android:textSize="14dp"
                    android:gravity="center"
                    android:button="@null"
                    android:background="@drawable/select_shaixuan"
                    android:textColor="@drawable/select_text_color"
                    android:layout_width="74dp"
                    android:layout_height="38dp"
                    />

                <CheckBox
                    android:text="挂牌督办中"
                    android:textSize="14dp"
                    android:gravity="center"
                    android:layout_marginLeft="12dp"
                    android:button="@null"
                    android:background="@drawable/select_shaixuan"
                    android:textColor="@drawable/select_text_color"
                    android:layout_width="102dp"
                    android:layout_height="38dp"
                    />

                <CheckBox
                    android:text="逾期完成"
                    android:textSize="14dp"
                    android:gravity="center"
                    android:layout_marginLeft="12dp"
                    android:button="@null"
                    android:background="@drawable/select_shaixuan"
                    android:textColor="@drawable/select_text_color"
                    android:layout_width="88dp"
                    android:layout_height="38dp"
                    />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="按督查内容筛选"
                android:textColor="@color/color_9F9FA0"
                android:textSize="14dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                android:layout_height="wrap_content">

                <CheckBox
                    android:text="政务文件"
                    android:textSize="14dp"
                    android:gravity="center"
                    android:button="@null"
                    android:background="@drawable/select_shaixuan"
                    android:textColor="@drawable/select_text_color"
                    android:layout_width="88dp"
                    android:layout_height="38dp"
                    />

                <CheckBox
                    android:text="督查事项"
                    android:textSize="14dp"
                    android:gravity="center"
                    android:layout_marginLeft="12dp"
                    android:button="@null"
                    android:background="@drawable/select_shaixuan"
                    android:textColor="@drawable/select_text_color"
                    android:layout_width="88dp"
                    android:layout_height="38dp"
                    />

                <CheckBox
                    android:text="工作计划"
                    android:textSize="14dp"
                    android:gravity="center"
                    android:button="@null"
                    android:layout_marginLeft="12dp"
                    android:background="@drawable/select_shaixuan"
                    android:textColor="@drawable/select_text_color"
                    android:layout_width="88dp"
                    android:layout_height="38dp"
                    />

            </LinearLayout>

            <CheckBox
                android:text="互联网+"
                android:textSize="14dp"
                android:gravity="center"
                android:button="@null"
                android:layout_marginTop="12dp"
                android:background="@drawable/select_shaixuan"
                android:textColor="@drawable/select_text_color"
                android:layout_width="88dp"
                android:layout_height="38dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="模糊时间搜索"
                android:textColor="@color/color_9F9FA0"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <CheckBox
                    android:layout_width="82dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:button="@null"
                    android:background="@drawable/select_shaixuan"
                    android:text="最近3天"
                    android:textColor="@drawable/select_text_color" />


                <CheckBox
                    android:layout_width="82dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="12dp"
                    android:gravity="center"
                    android:background="@drawable/select_shaixuan"
                    android:text="最近7天"
                    android:button="@null"
                    android:textColor="@drawable/select_text_color" />

                <CheckBox
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="12dp"
                    android:gravity="center"
                    android:button="@null"
                    android:background="@drawable/select_shaixuan"
                    android:text="最近30天"
                    android:textColor="@drawable/select_text_color" />

            </LinearLayout>

            <CheckBox
                android:layout_width="74dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:button="@null"
                android:background="@drawable/select_shaixuan"
                android:text="自定义"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:textColor="@drawable/select_text_color" />

        </LinearLayout>

    </ScrollView>

   <View
       android:background="#05000000"
       android:layout_alignParentBottom="true"
       android:layout_marginBottom="47dp"
       android:layout_width="match_parent"
       android:layout_height="1dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="47dp"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/drawer_quxiao"
            android:layout_width="70dp"
            android:layout_height="39dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="110dp"
            android:background="@drawable/shape_white22"
            android:text="取消"
            android:textColor="#9f9fa0"
            android:textSize="14dp" />

        <Button
            android:layout_width="100dp"
            android:layout_height="39dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="6dp"
            android:background="@drawable/shape_red22"
            android:text="立即筛选"
            android:textColor="#fff"
            android:textSize="14dp" />
    </LinearLayout>
</RelativeLayout>



