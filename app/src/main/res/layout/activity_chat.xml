<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#F5F2F2"
    android:layout_height="match_parent"
    tools:context=".aty.ChatActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:elevation="3dp"
        android:layout_alignParentTop="true"
        android:background="#DB1F2C"
        android:layout_height="81dp">

        <ImageView
            android:id="@+id/chat_back"
            android:layout_marginTop="41dp"
            android:layout_marginLeft="12dp"
            android:src="@mipmap/icon_back2"
            android:layout_width="22dp"
            android:layout_height="22dp"/>

        <TextView
            android:text="程祥"
            android:layout_marginTop="43dp"
            android:textSize="18dp"
            android:textColor="#fff"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_marginTop="44dp"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/icon_oerson"
            android:layout_width="22dp"
            android:layout_height="22dp"/>
    </RelativeLayout>

    <LinearLayout

        android:layout_marginBottom="48dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"

            app:cardElevation="3dp"
            android:background="#fff"
            android:orientation="horizontal"
            android:layout_height="47dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="47dp">

                <ImageView
                    android:src="@mipmap/talk_icon_more"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="28dp"
                    android:layout_height="28dp"/>

                <EditText
                    android:id="@+id/chat_edit"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="48dp"
                    android:background="@drawable/shape_hui8"
                    android:layout_marginTop="7dp"
                    android:paddingLeft="7dp"
                    android:layout_marginRight="86dp"
                    android:layout_height="34dp"/>

                <Button
                    android:id="@+id/chat_button"
                    android:layout_width="66dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/shape_red8"
                    android:layout_marginTop="7dp"
                    android:layout_marginRight="12dp"
                    android:textColor="#fff"
                    android:text="常用语"
                    android:layout_height="34dp"/>
            </RelativeLayout>

        </androidx.cardview.widget.CardView>
    </FrameLayout>



</FrameLayout>