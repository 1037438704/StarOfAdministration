<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="#fff"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:background="@color/white"
            android:paddingLeft="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="公文标题："
                android:textSize="16dp"
                android:textColor="@color/textMedium"
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/document_title"
                android:textSize="16dp"
                android:textColor="@color/textMedium"
                android:hint="请输入公文标题"
                android:includeFontPadding="false"
                android:textColorHint="#D7D7D8"
                android:background="@null"
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <View
            android:background="@color/backgroundHui"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <TextView
            android:id="@+id/document_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:text="拟编号：1274718733791379237489"
            android:textColor="#ff9f9fa0"
            android:textSize="12sp"
            />

        <View
            android:background="@color/backgroundHui"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="8dp"/>

        <TextView
            android:text="公文主体："
            android:textSize="16dp"
            android:layout_marginLeft="12dp"
            android:gravity="center_vertical"
            android:textColor="@color/textMedium"
            android:layout_width="match_parent"
            android:layout_height="44dp"/>

            <EditText
                android:id="@+id/document_subject"
                android:textSize="16dp"
                android:textColor="@color/textMedium"
                android:hint="请输入公文内容"
                android:textColorHint="#D7D7D8"
                android:background="@null"
                android:gravity="top"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>



    </LinearLayout>

    <include layout="@layout/layout_cebianlan" />

</RelativeLayout>
