<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <RelativeLayout
        android:background="#60000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginLeft="80dp"
            android:layout_alignParentRight="true"
            android:layout_width="280dp"
            android:orientation="vertical"
            android:paddingLeft="12dp"
            android:paddingTop="41dp"
            android:background="@drawable/shape_white8"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:text="条件筛选"
                android:textColor="#ff3e3e41"
                android:fontFamily="sans-serif-medium"
                android:textSize="18dp"
                />

            <TextView
                android:layout_width="112dp"
                android:layout_height="14dp"
                android:layout_marginTop="24dp"
                android:text="按照特殊属性排序"
                android:textColor="#ff717173"
                android:textSize="14dp"
                />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:text="会议通知靠前"
                    android:background="@drawable/select_shaixuan"
                    android:layout_width="122dp"
                    android:textColor="@drawable/select_text_color"
                    android:layout_height="40dp"/>

                <Button
                    android:text="会议通知靠后"
                    android:layout_marginLeft="12dp"
                    android:background="@drawable/select_shaixuan"
                    android:textColor="@drawable/select_text_color"
                    android:layout_width="122dp"
                    android:layout_height="40dp"/>
            </LinearLayout>

            <TextView
                android:layout_marginTop="32dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="模糊时间搜索"
                android:textColor="#ff717173"
                android:textSize="14sp"
                />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:hint="开始时间"
                    android:textColorHint="#9F9FA0"
                    android:textSize="14dp"
                    android:textColor="#3E3E41"
                    android:paddingLeft="32dp"
                    android:background="@drawable/select_shaixuan"
                    android:layout_width="120dp"
                    android:layout_height="32dp"/>

                <View
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    android:layout_marginTop="16dp"
                    android:background="#717173"
                    android:layout_width="12dp"
                    android:layout_height="1dp"/>


                <EditText
                    android:hint="结束时间"
                    android:textColorHint="#9F9FA0"
                    android:textSize="14dp"
                    android:textColor="#3E3E41"
                    android:paddingLeft="32dp"
                    android:background="@drawable/select_shaixuan"
                    android:layout_width="110dp"
                    android:layout_height="32dp"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:text="最近3天"
                    android:background="@drawable/select_shaixuan"
                    android:textColor="@drawable/select_text_color"
                    android:layout_width="77dp"
                    android:layout_height="40dp"/>


                <Button
                    android:text="最近7天"
                    android:layout_marginLeft="12dp"
                    android:background="@drawable/select_shaixuan"
                    android:textColor="@drawable/select_text_color"
                    android:layout_width="77dp"
                    android:layout_height="40dp"/>

                <Button
                    android:text="最近30天"
                    android:layout_marginLeft="12dp"
                    android:background="@drawable/select_shaixuan"
                    android:textColor="@drawable/select_text_color"
                    android:layout_width="77dp"
                    android:layout_height="40dp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginBottom="54dp"
            >
            <Button
                android:text="取消"
                android:textSize="14dp"
                android:background="@drawable/shape_white22"
                android:textColor="#9f9fa0"
                android:layout_width="122dp"
                android:layout_height="36dp"/>

            <Button
                android:text="立即筛选"
                android:textSize="14dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/shape_red22"
                android:textColor="#fff"
                android:layout_width="122dp"
                android:layout_height="36dp"/>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
