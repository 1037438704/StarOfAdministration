<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fiction_drawerlayout"
    android:layout_width="310dp"
    android:layout_height="match_parent"
    android:layout_gravity="right"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="310dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="1dp"
        android:background="@drawable/shape_white8"
        android:orientation="vertical"
        android:paddingLeft="12dp"
        android:paddingTop="34dp">

        <TextView
            android:id="@+id/fiction_choose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="条件筛选器"
            android:includeFontPadding="false"
            android:textColor="#ff3e3e41"
            android:textSize="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="按共享原则筛选"
            android:textColor="@color/text9f9fa0"
            android:textSize="14dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:layout_height="wrap_content">

            <CheckBox
                android:text="主动公开"
                android:textSize="14dp"
                android:gravity="center"
                android:button="@null"
                android:background="@drawable/select_shaixuan"
                android:textColor="@drawable/select_text_color"
                android:layout_width="88dp"
                android:layout_height="38dp"
                />

            <CheckBox
                android:text="依申请公开"
                android:textSize="14dp"
                android:gravity="center"
                android:layout_marginLeft="12dp"
                android:button="@null"
                android:background="@drawable/select_shaixuan"
                android:textColor="@drawable/select_text_color"
                android:layout_width="102dp"
                android:layout_height="38dp"
                />

            <CheckBox
                android:text="不公开"
                android:textSize="14dp"
                android:gravity="center"
                android:button="@null"
                android:layout_marginLeft="12dp"
                android:background="@drawable/select_shaixuan"
                android:textColor="@drawable/select_text_color"
                android:layout_width="74dp"
                android:layout_height="38dp"
                />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="按类别筛选"
            android:textColor="@color/text9f9fa0"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:layout_height="wrap_content">

            <CheckBox
                android:text="公文拟制"
                android:textSize="14dp"
                android:gravity="center"
                android:button="@null"
                android:background="@drawable/select_shaixuan"
                android:textColor="@drawable/select_text_color"
                android:layout_width="88dp"
                android:layout_height="38dp"
                />

            <CheckBox
                android:text="收文传阅"
                android:textSize="14dp"
                android:gravity="center"
                android:layout_marginLeft="12dp"
                android:button="@null"
                android:background="@drawable/select_shaixuan"
                android:textColor="@drawable/select_text_color"
                android:layout_width="88dp"
                android:layout_height="38dp"
                />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="按保存年限筛选"
            android:textColor="@color/text9f9fa0"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:layout_height="wrap_content">

            <CheckBox
                android:text="短期保存"
                android:textSize="14dp"
                android:gravity="center"
                android:button="@null"
                android:background="@drawable/select_shaixuan"
                android:textColor="@drawable/select_text_color"
                android:layout_width="88dp"
                android:layout_height="38dp"
                />

            <CheckBox
                android:text="保存20年"
                android:textSize="14dp"
                android:gravity="center"
                android:layout_marginLeft="12dp"
                android:button="@null"
                android:background="@drawable/select_shaixuan"
                android:textColor="@drawable/select_text_color"
                android:layout_width="90dp"
                android:layout_height="38dp"
                />

            <CheckBox
                android:text="保存30年"
                android:textSize="14dp"
                android:gravity="center"
                android:layout_marginLeft="12dp"
                android:button="@null"
                android:background="@drawable/select_shaixuan"
                android:textColor="@drawable/select_text_color"
                android:layout_width="90dp"
                android:layout_height="38dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:layout_height="wrap_content">

            <CheckBox
                android:text="保存50年"
                android:textSize="14dp"
                android:gravity="center"
                android:button="@null"
                android:background="@drawable/select_shaixuan"
                android:textColor="@drawable/select_text_color"
                android:layout_width="88dp"
                android:layout_height="38dp"
                />

            <CheckBox
                android:text="永久保存"
                android:textSize="14dp"
                android:gravity="center"
                android:layout_marginLeft="12dp"
                android:button="@null"
                android:background="@drawable/select_shaixuan"
                android:textColor="@drawable/select_text_color"
                android:layout_width="90dp"
                android:layout_height="38dp"
                />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="模糊时间搜索"
            android:textColor="@color/text9f9fa0"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <CheckBox
                android:layout_width="82dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:button="@null"
                android:background="@drawable/select_shaixuan"
                android:text="最近3天"
                android:textColor="@drawable/select_text_color" />


            <CheckBox
                android:layout_width="82dp"
                android:layout_height="40dp"
                android:layout_marginLeft="12dp"
                android:gravity="center"
                android:background="@drawable/select_shaixuan"
                android:text="最近7天"
                android:button="@null"
                android:textColor="@drawable/select_text_color" />

            <CheckBox
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_marginLeft="12dp"
                android:gravity="center"
                android:button="@null"
                android:background="@drawable/select_shaixuan"
                android:text="最近30天"
                android:textColor="@drawable/select_text_color" />

        </LinearLayout>

        <CheckBox
            android:layout_width="74dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:button="@null"
            android:background="@drawable/select_shaixuan"
            android:text="自定义"
            android:layout_marginTop="12dp"
            android:textColor="@drawable/select_text_color" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="47dp"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/drawer_quxiao"
            android:layout_width="70dp"
            android:layout_height="39dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="110dp"
            android:background="@drawable/shape_white22"
            android:text="取消"
            android:textColor="#9f9fa0"
            android:textSize="14dp" />

        <Button
            android:layout_width="100dp"
            android:layout_height="39dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="6dp"
            android:background="@drawable/shape_red22"
            android:text="立即筛选"
            android:textColor="#fff"
            android:textSize="14dp" />
    </LinearLayout>
</RelativeLayout>



