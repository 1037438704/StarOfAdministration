<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/item_file_linear"
    android:orientation="vertical"
    android:layout_marginTop="12dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_fiction_title"
        android:layout_width="match_parent"
        android:layout_marginTop="12dp"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:text="关于疫情防控工作的重要指导意见"
        android:textColor="#ff3e3e41"
        android:textSize="16sp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="12dp"
        android:layout_height="wrap_content"
        android:text="要求办结：2020/03/26 13:45:29"
        android:textColor="#ff717173"
        android:textSize="14sp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="8dp"
        android:layout_height="wrap_content"
        android:text="接收时间：2020/03/26 13:45:29"
        android:textColor="#ff717173"
        android:textSize="14sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="督办单位："
            android:textColor="#ff717173"
            android:textSize="14sp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="某某某某某某"
            android:textColor="#ff717173"
            android:textSize="14sp"
            />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="预警状态："
            android:textColor="#ff717173"
            android:textSize="14sp"
            />

        <TextView
            android:text="急"
            android:textSize="12dp"
            android:textColor="@color/colorPrimaryDark"
            android:gravity="center"
            android:background="#FDEDEF"
            android:layout_width="20dp"
            android:layout_height="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="办理状态：等待归档"
            android:layout_marginLeft="50dp"
            android:textColor="#ff717173"
            android:textSize="14sp"
            />
    </LinearLayout>


    <View
        android:layout_marginTop="16dp"
        android:background="@color/backgroundHui"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</LinearLayout>
