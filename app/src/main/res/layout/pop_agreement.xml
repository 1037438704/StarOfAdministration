<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="80dp"
    android:layout_height="wrap_content">

    <ScrollView
        android:id="@+id/popup_sf_event_scroll_01"
        android:layout_width="match_parent"
        android:layout_height="646dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:background="@drawable/shape_background8"
            android:orientation="vertical"
            android:paddingTop="8dp"
            android:layout_alignParentBottom="true"
            android:layout_height="match_parent">

            <include layout="@layout/item_img_down"/>

            <LinearLayout
                android:layout_marginLeft="64dp"
                android:layout_marginRight="64dp"
                android:gravity="center"
                android:visibility="gone"
                android:layout_marginTop="4dp"
                android:orientation="horizontal"
                android:paddingBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/linear_yinsi"
                    android:layout_width="0dp"
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/radio_conceal"
                        android:layout_width="match_parent"
                        android:text="隐私政策"
                        android:textSize="14dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:button="@null"
                        android:gravity="center_horizontal"
                        android:layout_height="wrap_content"/>

                    <View
                        android:layout_width="22dp"
                        android:background="@color/colorPrimaryDark"
                        android:layout_marginTop="10dp"
                        android:layout_height="2dp"/>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/linear_yonghu"
                    android:layout_width="0dp"
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/radio_user"
                        android:layout_width="match_parent"
                        android:text="用户协议"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="14dp"
                        android:textColor="@color/color_A3A3A4"
                        android:gravity="center_horizontal"
                        android:layout_height="wrap_content"/>

                    <View
                        android:layout_width="22dp"
                        android:background="@color/background"
                        android:layout_marginTop="10dp"
                        android:layout_height="2dp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_fuwu"
                    android:layout_width="0dp"
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/radio_serve"
                        android:layout_width="match_parent"
                        android:text="服务协议"
                        android:textSize="14dp"
                        android:textColor="@color/color_A3A3A4"
                        android:button="@null"
                        android:gravity="center_horizontal"
                        android:layout_height="wrap_content"/>

                    <View
                        android:layout_width="22dp"
                        android:background="@color/background"
                        android:layout_marginTop="10dp"
                        android:layout_height="2dp"/>
                </LinearLayout>

            </LinearLayout>

            <RadioGroup
                android:id="@+id/main_rgp"
                android:layout_height="34dp"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:paddingTop="3dp">

                <RadioButton
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:textSize="14dp"
                    android:text="隐私协议"
                    android:paddingTop="6dp"
                    android:drawableBottom="@drawable/select_radio_line"
                    android:textColor="@drawable/select_textcolor"
                    android:button="@null"/>

                <RadioButton
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:textSize="14dp"
                    android:text="用户协议"
                    android:paddingTop="6dp"
                    android:drawableBottom="@drawable/select_radio_line"
                    android:textColor="@drawable/select_textcolor"
                    android:button="@null"/>

                <RadioButton
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:textSize="14dp"
                    android:text="服务协议"
                    android:paddingTop="6dp"
                    android:drawableBottom="@drawable/select_radio_line"
                    android:textColor="@drawable/select_textcolor"
                    android:button="@null"/>

            </RadioGroup>

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewPager"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_marginTop="8dp"
                android:layout_height="0dp"
                android:layout_weight="1">
            </androidx.viewpager.widget.ViewPager>

            <WebView
                android:id="@+id/login_webview"
                android:layout_width="match_parent"
                android:background="#F5F5F5"
                android:layout_marginTop="8dp"
                android:layout_height="426dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:layout_marginRight="52dp"
                android:layout_marginLeft="52dp"
                android:gravity="center"
                android:layout_height="139dp"
                >
                <Button
                    android:id="@+id/login_jujue"
                    android:text="拒绝"
                    android:textSize="14dp"
                    android:background="@drawable/shape_white22"
                    android:textColor="#9f9fa0"
                    android:layout_width="122dp"
                    android:layout_height="36dp"/>

                <Button
                    android:id="@+id/login_agree"
                    android:text="同意"
                    android:textSize="14dp"
                    android:layout_marginLeft="12dp"
                    android:background="@drawable/shape_red22"
                    android:textColor="#fff"
                    android:layout_width="122dp"
                    android:layout_height="36dp"/>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
