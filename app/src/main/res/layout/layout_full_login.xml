<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@color/white"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/image_finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:src="@mipmap/login_down" />

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_marginLeft="64dp"
        android:layout_marginRight="64dp"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/radio_conceal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="隐私政策"
            android:textSize="14dp"
            android:textColor="#A3A3A4"
            android:button="@null"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"/>

        <RadioButton
            android:id="@+id/radio_user"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="隐私政策"
            android:textSize="14dp"
            android:textColor="#A3A3A4"
            android:button="@null"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"/>

        <RadioButton
            android:id="@+id/radio_serve"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="服务协议"
            android:textSize="14dp"
            android:textColor="#A3A3A4"
            android:button="@null"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"/>
    </RadioGroup>

    <!--<View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f0f0f0" />-->

   <androidx.viewpager.widget.ViewPager
        android:id="@+id/vp_container"
       android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="530dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginRight="52dp"
        android:layout_marginLeft="52dp"
        android:gravity="center"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <Button
            android:text="拒绝"
            android:textSize="14dp"
            android:background="@drawable/shape_white22"
            android:textColor="#9f9fa0"
            android:layout_width="122dp"
            android:layout_height="36dp"/>

        <Button
            android:text="同意"
            android:textSize="14dp"
            android:layout_marginLeft="12dp"
            android:background="@drawable/shape_red22"
            android:textColor="#fff"
            android:layout_width="122dp"
            android:layout_height="36dp"/>
    </LinearLayout>

</LinearLayout>