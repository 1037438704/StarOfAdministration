<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:orientation="vertical"
    tools:context=".aty.ChoosePersonActivity">

    <include layout="@layout/layout_title_white"/>

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="46dp">

        <ImageView
            android:layout_marginLeft="16dp"
            android:src="@mipmap/icon_search"
            android:layout_width="20dp"
            android:layout_height="20dp"/>

        <EditText
            android:id="@+id/search_edit"
            android:hint="搜索要选择的对象"
            android:textColorHint="#9F9FA0"
            android:textSize="14dp"
            android:layout_marginLeft="8dp"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1">
        <LinearLayout
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="我的单位"
                android:textColor="@color/text9f9fa0"
                android:textSize="12dp"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_marginTop="1dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="46dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_height="match_parent">

            <TextView
                android:layout_marginLeft="12dp"
                android:text="已选：15人"
                android:textSize="16dp"
                android:textColor="@color/textMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:src="@mipmap/icon_chang_yong_yi_xuan"
                android:layout_marginLeft="4dp"
                android:layout_width="12dp"
                android:layout_height="12dp"/>

        </LinearLayout>


        <Button
            android:text="提交15"
            android:textSize="14dp"
            android:textColor="#fff"
            android:layout_marginRight="12dp"
            android:includeFontPadding="false"
            android:background="@drawable/shape_red22"
            android:layout_width="68dp"
            android:layout_height="36dp"/>
    </LinearLayout>

</LinearLayout>