<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <RelativeLayout
        android:background="#60000000"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/back_button"
            android:src="@mipmap/daiban_back2"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="17dp"
            android:layout_marginLeft="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:background="@drawable/shape_background8"
            android:layout_marginTop="81dp"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include layout="@layout/item_img_down"/>

            <TextView
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_marginTop="6dp"
                android:paddingBottom="12dp"
                android:layout_height="wrap_content"
                android:text="识别出的文本"
                android:textColor="#ff9f9fa0"
                android:textSize="14sp"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:background="#dff"
                />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:drawableLeft="@mipmap/daiban_chong_xin_shi_bie"
                        android:text="重新识别"
                        android:textColor="#3E3E41"
                        android:textSize="14dp"
                        android:layout_marginTop="17dp"
                        android:layout_marginBottom="16dp"
                        android:layout_width="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_height="wrap_content"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:drawableLeft="@mipmap/daiban_copy"
                        android:text="复制内容"
                        android:textColor="#3E3E41"
                        android:textSize="14dp"
                        android:layout_marginTop="17dp"
                        android:layout_marginBottom="16dp"
                        android:layout_width="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
