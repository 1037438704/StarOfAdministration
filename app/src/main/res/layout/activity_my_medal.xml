<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_android"
    tools:context=".aty.MyMedalActivity">

    <ImageView
        android:id="@+id/back"
        android:src="@mipmap/icon_back_white"
        android:layout_marginTop="41dp"
        android:layout_marginLeft="12dp"
        android:layout_width="22dp"
        android:layout_height="22dp"/>

    <TextView
        android:text="我的勋章墙"
        android:textColor="#F5F5F5"
        android:textSize="24dp"
        android:fontFamily="sans-serif-medium"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/number"
        android:textSize="16dp"
        android:textColor="#50F5F5F5"
        android:text="共34枚"
        android:layout_marginTop="132dp"
        android:layout_marginLeft="32dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/medal_big"
        android:src="@mipmap/medal_big"
        android:layout_alignParentRight="true"
        android:layout_marginTop="78dp"
        android:layout_marginRight="32dp"
        android:layout_width="91dp"
        android:layout_height="91dp"/>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tablayout"
        android:layout_marginTop="191dp"
        android:layout_width="wrap_content"
        app:tabSelectedTextColor="#ffffff"
        app:tabIndicatorFullWidth="false"
        tools:ignore="MissingConstraints"
        app:tabTextColor="#50ffffff"
        android:drawableBottom="@drawable/select_xiahualine"
        app:tabIndicatorColor="#fff"
        app:tabGravity="center"
        app:tabMode="fixed"
        app:tabMaxWidth="0dp"
        android:layout_height="44dp"/>


        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPagerMedal"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="240dp"
            android:paddingTop="8dp"
            android:background="@drawable/shape_white_up_12"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

</RelativeLayout>