<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginRight="16dp"
    android:layout_marginLeft="16dp"
    android:gravity="center_horizontal"
    android:layout_height="wrap_content">

    <LinearLayout
        android:background="@drawable/shape_background4_8"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="280dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/pop_delete_group_title"
            android:text="删除常用组"
            android:textSize="16dp"
            android:textColor="@color/textMedium"
            android:layout_marginTop="20dp"
            android:includeFontPadding="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="这个操作将无法复原，确认要删除"
            android:textSize="14dp"
            android:textColor="@color/text717173"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/pop_delete_group_name"
                android:text="医疗公文类"
                android:textSize="14dp"
                android:textColor="@color/textMedium"
                android:includeFontPadding="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/pop_delete_group_text"
                android:text="常用组吗？"
                android:textSize="14dp"
                android:textColor="@color/text717173"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginRight="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="12dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            >

            <Button
                android:id="@+id/pop_delete_group_cancle"
                android:text="取消"
                android:textSize="14dp"
                android:background="@drawable/shape_white22"
                android:includeFontPadding="false"
                android:textColor="#9f9fa0"
                android:layout_width="68dp"
                android:layout_height="38dp"/>

            <Button
                android:id="@+id/pop_delete_group_sure"
                android:text="确定"
                android:textSize="14dp"
                android:layout_marginLeft="16dp"
                android:background="@drawable/shape_red22"
                android:includeFontPadding="false"
                android:textColor="#fff"
                android:layout_width="68dp"
                android:layout_height="38dp"/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
