<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_map"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:elevation="5dp"
    android:layout_marginTop="16dp"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/item_map_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:text="谁共享给我的位置"
        android:textColor="#ff3e3e41"
        android:textSize="16sp"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="共享人：欧某"
            android:textColor="#ff717173"
            android:textSize="14sp"
            />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="8dp"
        android:layout_height="wrap_content"
        android:text="所在单位：某某某"
        android:textColor="#ff717173"
        android:textSize="14sp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="8dp"
        android:layout_height="wrap_content"
        android:text="共享时间：2020/03/26 13:45:29"
        android:textColor="#ff717173"
        android:textSize="14sp"
        />

    <View
        android:layout_marginTop="16dp"
        android:background="@color/backgroundHui"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>


</LinearLayout>
