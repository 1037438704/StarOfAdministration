<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_font_size_small"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:text="小"
        android:background="@null"
        style="?android:attr/borderlessButtonStyle"
        app:layout_constraintEnd_toStartOf="@+id/btn_font_size_normal"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_bold" />

    <Button
        android:id="@+id/btn_font_size_normal"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:text="中"
        android:background="@null"
        style="?android:attr/borderlessButtonStyle"
        app:layout_constraintEnd_toStartOf="@+id/btn_font_size_big"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_font_size_small"
        app:layout_constraintTop_toBottomOf="@+id/btn_bold" />

    <Button
        android:id="@+id/btn_font_size_big"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="3dp"
        android:text="大"
        android:background="@null"
        style="?android:attr/borderlessButtonStyle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_font_size_normal"
        app:layout_constraintTop_toBottomOf="@+id/btn_bold" />
</LinearLayout>