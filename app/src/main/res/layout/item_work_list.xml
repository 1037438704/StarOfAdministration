<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/item_work_linear"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/liucheng_head"
                android:src="@mipmap/me"
                android:layout_width="34dp"
                android:layout_height="34dp"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginLeft="12dp"
                android:gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/liucheng_name"
                    android:text="政府办-秘书科-某某某"
                    android:textColor="@color/color_717173"
                    android:textSize="14dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/liucheng_time"
                    android:text="2020/03/20 15:30:30"
                    android:textColor="@color/color_717173"
                    android:textSize="14dp"
                    android:layout_marginTop="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <Button
                android:text="退回"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:background="@drawable/shape_red8"
                android:layout_width="56dp"
                android:layout_height="28dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/liucheng_context"
                android:text="从 2015 年 4 月起，Ant Design 在蚂蚁金服中后台产品线迅速推广，对接多条业务线，覆盖系统 800 个以上。"
                android:textSize="15dp"
                android:lineSpacingExtra="5dp"
                android:textColor="@color/color_3E3E41"
                android:includeFontPadding="false"

                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>

            <CheckBox
                android:id="@+id/item_choose_myAll"
                android:background="@drawable/select_choose_all"
                android:button="@null"
                android:layout_marginLeft="12dp"
                android:layout_width="20dp"
                android:layout_height="20dp"/>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/item_work_recycle"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="wrap_content">
        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>

</LinearLayout>
