<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/item_linear"
    android:orientation="horizontal"
    android:layout_marginTop="17dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_height="wrap_content">

    <ImageView
       android:background="#eff0f2"
        android:layout_width="18dp"
        android:layout_height="18dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_title"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="关于疫情防控工作的重要指导意见"
            android:textColor="#ff3e3e41"
            android:textSize="16sp"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="任务进度：0/10"
                android:textColor="@color/text8d8d93"
                android:textSize="14sp"
                />


            <ImageView
                android:src="@mipmap/icon_phone"
                android:layout_width="16dp"
                android:layout_height="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7天后开始"
                android:layout_marginLeft="2dp"
                android:textColor="@color/text8d8d93"
                android:textSize="14sp"
                />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:layout_height="wrap_content"
            android:text="牵头单位：某某某某"
            android:textColor="@color/text8d8d93"
            android:textSize="14sp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:layout_height="wrap_content"
            android:text="截止日期：2020/03/26 13:45:29"
            android:textColor="@color/text8d8d93"
            android:textSize="14sp"
            />


        <View
            android:layout_marginTop="16dp"
            android:background="@color/backgroundHui"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

    </LinearLayout>

</LinearLayout>
