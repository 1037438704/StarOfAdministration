<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_marginTop="12dp"
    android:layout_marginBottom="12dp"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <CheckBox
        android:id="@+id/item_choose_myAll"
        android:background="@drawable/select_choose_all"
        android:button="@null"
        android:layout_marginLeft="12dp"
        android:layout_width="20dp"
        android:layout_height="20dp"/>

    <ImageView
        android:id="@+id/item_choose_myBumen"
        android:src="@mipmap/bu_men"
        android:layout_marginLeft="12dp"
        android:layout_width="36dp"
        android:layout_height="36dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="8dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_choose_buMen_name"
            android:text="天津市人民政府"
            android:textSize="16dp"
            android:textColor="@color/textMedium"
            android:includeFontPadding="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/item_choose_buMen_num"
            android:text="35个部门"
            android:textSize="12dp"
            android:textColor="@color/text717173"
            android:layout_marginTop="4dp"
            android:includeFontPadding="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/item_choose_goNext"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="12dp"
        android:src="@mipmap/icon_more" />

</LinearLayout>
