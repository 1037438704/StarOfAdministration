<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lawe.starofadministration">

    <uses-permission android:name="android.permission.INTERNET" /> <!-- 网络权限 -->
    <uses-permission android:name="android.permission.VIBRATE" /> <!-- 震动权限 -->
    <uses-permission android:name="android.permission.CAMERA" /> <!-- 摄像头权限 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/my_app"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="false"
        android:theme="@style/AppTheme">
        <!-- 登录页 -->
        <activity android:name=".aty.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 主页面 -->
        <activity android:name=".MainActivity" />

        <!-- 启动页面 -->
        <activity android:name=".aty.BootPageAty" />
        <!-- 二维码 -->
        <activity android:name=".zxing.activity.CaptureActivity" />
        <!--公文拟制列表-->
        <activity android:name=".aty.FictionActivity"/>
        <!-- 操作中心 -->
        <activity android:name=".aty.ExplanaActivity" />
        <!-- 服务中心 -->
        <activity android:name=".aty.ServiceActivity" />
        <!-- 问题反馈 -->
        <activity android:name=".aty.FeedBackActivity" />
        <!-- 系统设置 -->
        <activity android:name=".aty.SystemActivity" />
        <!-- 重置密码 -->
        <activity android:name=".aty.UpdatePassActivity" />
        <!-- 安全设置 -->
        <activity android:name=".aty.SetSafeActivity" />
        <!-- 我的勋章 -->
        <activity android:name=".aty.MyMedalActivity" />
        <!-- 聊天页面 -->
        <activity
            android:name=".aty.ChatActivity"
            android:windowSoftInputMode="stateVisible|adjustResize" />
        <!-- 今日日程 -->
        <activity android:name=".aty.LookAllActivity" />
        <!-- 忘记密码 -->
        <activity android:name=".aty.ForgetPassActivity" />
        <!-- 扫一扫 -->
        <activity android:name=".aty.ScanningActivity" />

        <!-- ========今日头条适配========= -->
        <meta-data
            android:name="design_width_in_dp"
            android:value="360" />
        <meta-data
            android:name="design_height_in_dp"
            android:value="720" />



    </application>

</manifest>